<% layout("/layouts/boilerplate.ejs") %>

<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<body>

  <div class="tech-background"></div>

  <section id="hero" class="position-relative overflow-hidden">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>

    <div class="container py-8 py-md-10 position-relative z-2 mt-3">
      <div class="row align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="hero-content" data-aos="fade-right" data-aos-duration="1000">
            <div class="d-inline-flex align-items-center px-3 py-1 rounded-pill bg-white shadow-sm border mb-4">
              <span class="badge bg-primary rounded-pill me-2">New</span>
              <span class="text-muted small fw-semibold">IoT Enabled Shopping Experience</span>
            </div>
            
            <h1 class="display-3 fw-bold mb-4 text-dark">
              The <span class="text-gradient">Smartest</span> Way <br> To Shop.
            </h1>
            
            <p class="lead mb-5 text-secondary">
              Stop waiting in queues. Our hardware-integrated trolley tracks your items in real-time, calculates your bill, and lets you walk out in seconds.
            </p>
            
            <div class="d-flex flex-wrap gap-3">
              <form method="get" action="/home/listings">
                <button class="btn btn-primary btn-lg px-5 py-3 rounded-pill fw-bold shadow-lg btn-glow">
                  <i class="fas fa-shopping-cart me-2"></i>Grab a Trolley
                </button>
              </form>
              <a href="/home/guide" class="btn btn-white btn-lg px-5 py-3 rounded-pill fw-bold shadow-sm border">
                <i class="fas fa-microchip me-2"></i>How It Works
              </a>
            </div>

            <div class="mt-5 d-flex align-items-center gap-4 pt-4 border-top">
              <div class="d-flex align-items-center">
                <i class="fas fa-wifi text-primary fs-4 me-2"></i>
                <div>
                  <h6 class="fw-bold mb-0">IoT Connected</h6>
                  <small class="text-muted">Live Sync</small>
                </div>
              </div>
              <div class="d-flex align-items-center">
                <i class="fas fa-battery-full text-success fs-4 me-2"></i>
                <div>
                  <h6 class="fw-bold mb-0">Long Battery</h6>
                  <small class="text-muted">12hr Backup</small>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="hero-image-wrapper position-relative" data-aos="zoom-in" data-aos-duration="1200">
            <div class="scanner-container rounded-4 shadow-2xl overflow-hidden position-relative">
              <div class="scanner-line"></div>
              <img src="https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                   class="img-fluid w-100" 
                   alt="Smart Shopping Trolley">
              
              <div class="hud-corner hud-tl"></div>
              <div class="hud-corner hud-br"></div>
            </div>

            <div class="floating-card glass-card p-3 position-absolute top-0 end-0" style="width: 200px; transform: translate(20px, -20px);">
              <div class="d-flex align-items-center gap-2 mb-2">
                <div class="spinner-grow text-success spinner-grow-sm" role="status"></div>
                <small class="fw-bold text-dark">System Active</small>
              </div>
              <div class="progress" style="height: 4px;">
                <div class="progress-bar bg-success" style="width: 92%;"></div>
              </div>
            </div>

            <div class="floating-card glass-card p-3 position-absolute bottom-0 start-0" style="width: 220px; transform: translate(-20px, 40px); animation-delay: 1s;">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <small class="text-muted">Total Cart Value</small>
                <i class="fas fa-sync fa-spin text-primary opacity-50"></i>
              </div>
              <h3 class="fw-bold text-dark mb-0">₹ 2,450.00</h3>
              <small class="text-success"><i class="fas fa-arrow-down"></i> Saved ₹120</small>
            </div>
          </div>
        </div>
      </div>
    </div>
    

  </section>

  <section id="features" class="py-8 bg-light position-relative">
    <div class="containe mt-4">
      <div class="text-center mb-6" data-aos="fade-up">
        <h6 class="text-primary fw-bold text-uppercase letter-spacing-2">Core Technology</h6>
        <h2 class="fw-bold mb-3 display-5">Hardware Meets Software</h2>
        <p class="text-muted lead mx-auto" style="max-width: 600px;">Our trolleys are embedded with advanced sensors and RFID technology to provide a seamless checkout experience.</p>
      </div>

      <div class="row g-4">
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
          <div class="feature-card h-100 p-5 bg-white rounded-4 border-0 shadow-hover text-center position-relative overflow-hidden">
            <div class="hover-gradient"></div>
            <div class="icon-box mb-4 mx-auto bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
              <i class="fas fa-satellite-dish fs-2"></i>
            </div>
            <h4 class="fw-bold mb-3">RFID Tracking</h4>
            <p class="text-muted">Items are automatically detected as soon as you drop them in the cart. No manual scanning required.</p>
          </div>
        </div>

        <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
          <div class="feature-card h-100 p-5 bg-white rounded-4 border-0 shadow-hover text-center position-relative overflow-hidden">
            <div class="hover-gradient"></div>
            <div class="icon-box mb-4 mx-auto bg-success-subtle text-success rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
              <i class="fas fa-brain fs-2"></i>
            </div>
            <h4 class="fw-bold mb-3">AI Processing</h4>
            <p class="text-muted">Our on-board algorithm suggests recipes based on your cart and alerts you of budget limits.</p>
          </div>
        </div>

        <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
          <div class="feature-card h-100 p-5 bg-white rounded-4 border-0 shadow-hover text-center position-relative overflow-hidden">
            <div class="hover-gradient"></div>
            <div class="icon-box mb-4 mx-auto bg-warning-subtle text-warning rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
              <i class="fas fa-qrcode fs-2"></i>
            </div>
            <h4 class="fw-bold mb-3">Touchless Checkout</h4>
            <p class="text-muted">Simply walk out the dedicated lane. The payment is deducted automatically from your wallet.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-8">
    <div class="container" data-aos="zoom-in">
      <div class="cta-wrapper bg-dark text-white rounded-5 p-5 p-lg-6 position-relative overflow-hidden">
        <div class="circuit-pattern"></div>
        
        <div class="row position-relative z-2 align-items-center">
          <div class="col-lg-7">
            <h2 class="display-5 fw-bold mb-4">Upgrade Your Supermarket</h2>
            <p class="lead opacity-75 mb-4">
              Connect your physical store to the digital world. Monitor inventory levels and customer patterns in real-time through our dashboard.
            </p>
            <div class="d-flex flex-wrap gap-3">
              <form method="get" action="/products">
                <button class="btn btn-primary btn-lg rounded-pill px-4">
                  View Dashboard
                </button>
              </form>
              <a href="#contact" class="btn btn-outline-light btn-lg rounded-pill px-4">
                Request Hardware Demo
              </a>
            </div>
          </div>
          <div class="col-lg-5 text-center mt-4 mt-lg-0">
            <i class="fas fa-store fa-10x opacity-10 text-white-50"></i>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-6 border-top bg-white">
    <div class="container">
      <div class="row text-center g-4 divide-x">
        <div class="col-6 col-md-3" data-aos="fade-up" data-aos-delay="0">
          <h2 class="fw-bold text-dark display-4">10k+</h2>
          <p class="text-muted text-uppercase small letter-spacing-2">Active Trolleys</p>
        </div>
        <div class="col-6 col-md-3" data-aos="fade-up" data-aos-delay="100">
          <h2 class="fw-bold text-dark display-4">0s</h2>
          <p class="text-muted text-uppercase small letter-spacing-2">Wait Time</p>
        </div>
        <div class="col-6 col-md-3" data-aos="fade-up" data-aos-delay="200">
          <h2 class="fw-bold text-dark display-4">99.9%</h2>
          <p class="text-muted text-uppercase small letter-spacing-2">Accuracy</p>
        </div>
        <div class="col-6 col-md-3" data-aos="fade-up" data-aos-delay="300">
          <h2 class="fw-bold text-dark display-4">24/7</h2>
          <p class="text-muted text-uppercase small letter-spacing-2">Server Uptime</p>
        </div>
      </div>
    </div>
  </section>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({
      once: true,
      offset: 100
    });
  </script>

  <style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4cc9f0;
      --font-main: 'Outfit', sans-serif;
    }

    body {
      font-family: var(--font-main);
      color: #2b2d42;
      background-color: #f8f9fa;
    }

    /* Tech Background with Grid */
    .tech-background {
     
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      background-color: #f8faff;
      background-image: linear-gradient(#e5e7eb 1px, transparent 1px),
        linear-gradient(90deg, #e5e7eb 1px, transparent 1px);
      background-size: 40px 40px;
      opacity: 0.5;
    }

    /* Gradient Text */
    .text-gradient {
      background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    /* Blobs */
    .blob {
      position: absolute;
      filter: blur(80px);
      z-index: 1;
      opacity: 0.6;
    }
    .blob-1 { top: -10%; left: -10%; width: 500px; height: 500px; background: rgba(67, 97, 238, 0.15); border-radius: 50%; }
    .blob-2 { bottom: -10%; right: -10%; width: 400px; height: 400px; background: rgba(76, 201, 240, 0.15); border-radius: 50%; }

    /* Hero Scanner Animation */
    .scanner-container {
      position: relative;
    }
    
    .scanner-line {
      position: absolute;
      width: 100%;
      height: 3px;
      background: linear-gradient(90deg, transparent, #4cc9f0, transparent);
      box-shadow: 0 0 15px #4cc9f0;
      z-index: 10;
      top: 0;
      animation: scan 3s ease-in-out infinite;
    }

    @keyframes scan {
      0% { top: 0; opacity: 0; }
      10% { opacity: 1; }
      90% { opacity: 1; }
      100% { top: 100%; opacity: 0; }
    }

    /* HUD Elements */
    .hud-corner {
      position: absolute;
      width: 30px;
      height: 30px;
      border: 3px solid rgba(255, 255, 255, 0.8);
      z-index: 10;
    }
    .hud-tl { top: 20px; left: 20px; border-right: 0; border-bottom: 0; }
    .hud-br { bottom: 20px; right: 20px; border-left: 0; border-top: 0; }

    /* Glass Cards */
    .glass-card {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.5);
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      animation: float 6s ease-in-out infinite;
    }

    .floating-card:nth-child(2) { animation-delay: 1.5s; }

    /* Feature Cards */
    .feature-card {
      transition: all 0.4s ease;
    }
    .feature-card:hover {
      transform: translateY(-10px);
    }
    .shadow-hover:hover {
      box-shadow: 0 20px 40px rgba(67, 97, 238, 0.1) !important;
    }
    
    .hover-gradient {
      position: absolute;
      top: 0; left: 0; right: 0; height: 5px;
      background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.4s ease;
    }
    .feature-card:hover .hover-gradient {
      transform: scaleX(1);
    }

    /* CTA Circuit Pattern */
    .circuit-pattern {
      position: absolute;
      top: 0; left: 0; width: 100%; height: 100%;
      background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10 10h80v80h-80z' fill='none' stroke='%23ffffff' stroke-opacity='0.05' stroke-width='1'/%3E%3Cpath d='M20 20h60v60h-60z' fill='none' stroke='%23ffffff' stroke-opacity='0.05' stroke-width='1'/%3E%3C/svg%3E");
      opacity: 0.3;
      z-index: 1;
    }

    /* Buttons */
    .btn-primary {
      background: var(--primary-color);
      border-color: var(--primary-color);
    }
    .btn-primary:hover {
      background: var(--secondary-color);
    }
    .btn-glow {
      transition: box-shadow 0.3s ease;
    }
    .btn-glow:hover {
      box-shadow: 0 0 20px rgba(67, 97, 238, 0.5) !important;
    }

    

    .pulse-ring {
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      border: 2px solid var(--primary-color);
      animation: pulse-border 2s infinite;
    }

    @keyframes pulse-border {
      0% { transform: scale(1); opacity: 1; }
      100% { transform: scale(1.5); opacity: 0; }
    }

    @keyframes float {
      0%, 100% { transform: translateY(0) translate(var(--tx, 0), var(--ty, 0)); }
      50% { transform: translateY(-15px) translate(var(--tx, 0), var(--ty, 0)); }
    }

    /* Responsive */
    @media (max-width: 768px) {
      .hero-content h1 { font-size: 2.5rem; }
      .floating-card { display: none; } /* Hide floating cards on mobile to clear view */
      .scanner-container { margin-top: 2rem; }
    }
  </style>
</body>