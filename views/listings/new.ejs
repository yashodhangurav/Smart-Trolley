<% layout("/layouts/boilerplate.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Listing | SmartTrolley</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    /* FIX: Changed from animated gradient to a high-quality static background.
       This reduces CPU usage to almost 0%.
    */
    .full-page{
      font-family: 'Poppins', sans-serif;
      background-color: #f0f4f8; /* Fallback */
      background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%); /* Static soft gradient */
      min-height: 100vh;
      margin: 0;
      padding: 2rem 0;
    }

    /* FIX: Removed 'backdrop-filter' (blur). 
       Using a solid white background is the standard for fast, modern apps.
    */
    .form-card {
      background: #ffffff; 
      border-radius: 20px;
      padding: 2.5rem;
      max-width: 800px;
      margin: 1rem auto;
      /* Soft shadow creates depth without lag */
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08); 
      border: 1px solid rgba(255,255,255,0.5);
    }

    /* Typography & Headers */
    h2 {
      font-weight: 700;
      color: #2c3e50;
      text-align: center;
      margin-bottom: 0.5rem;
    }

    .form-header-icon {
      font-size: 2.5rem;
      /* Static gradient text is okay, it doesn't cause lag */
      background: linear-gradient(45deg, #23a6d5, #23d5ab);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      display: block;
      text-align: center;
      margin-bottom: 1rem;
    }

    /* Inputs & Labels */
    .form-label {
      font-weight: 600;
      color: #555;
      margin-bottom: 0.4rem;
      font-size: 0.95rem;
    }

    /* Optimized Inputs: removed blur effects, kept smooth transitions 
    */
    .form-control, .form-select {
      background: #f8f9fa;
      border: 2px solid #eef2f7;
      border-radius: 12px;
      padding: 0.8rem;
      font-size: 1rem;
      transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    .form-control:focus, .form-select:focus {
      background: #fff;
      border-color: #23a6d5;
      box-shadow: 0 0 0 4px rgba(35, 166, 213, 0.15);
      outline: none;
    }

    /* File Input Styling */
    input[type="file"]::file-selector-button {
      background: #eef2f7;
      border: none;
      border-radius: 8px;
      padding: 0.5rem 1rem;
      margin-right: 1rem;
      color: #555;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s;
    }
    input[type="file"]::file-selector-button:hover {
      background: #dfe3e8;
    }

    /* Submit Button */
    .btn-submit {
      background: linear-gradient(45deg, #23a6d5, #1e88e5);
      border: none;
      color: white;
      font-weight: 600;
      padding: 1rem;
      border-radius: 12px;
      font-size: 1.1rem;
      width: 100%;
      letter-spacing: 0.5px;
      transition: transform 0.2s, box-shadow 0.2s;
      box-shadow: 0 4px 15px rgba(35, 166, 213, 0.2);
      margin-top: 1.5rem;
    }

    .btn-submit:hover {
      /* Simple transform is hardware accelerated and fast */
      transform: translateY(-2px); 
      box-shadow: 0 8px 20px rgba(35, 166, 213, 0.3);
    }
  </style>
</head>

<body>
  <div class="full-page">

  <div class="container">
    <div class="form-card">
      
      <i class="bi bi-plus-circle-dotted form-header-icon"></i>
      <h2>Add New Products</h2>
      <p class="text-center text-muted mb-4">Fill in the details to list a new product</p>

      <form action="/home/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="row">
          <div class="col-md-12 mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="listing[title]" placeholder="Enter machinery name" class="form-control" required />
            <div class="invalid-feedback">Please enter a Title.</div>
          </div>

          <div class="col-md-6 mb-3">
            <label for="type" class="form-label">Type</label>
            <select id="type" name="listing[type]" class="form-control form-select" required>
              <option value="">Select Type</option>
              <option value="chocolate">Chocolate</option>
              <option value="mirinda">Mirinda</option>
              <option value="coke">Coke</option>
              <option value="lays">Lays</option>
              <option value="pringles">Pringles</option>
              <option value="faceCream">Face Cream</option>
              <option value="other">Other</option>
            </select>
            <div class="invalid-feedback">Please choose a Type.</div>
          </div>

          <div class="col-md-6 mb-3">
            <label for="pricePerDay" class="form-label">Price per Day (₹)</label>
            <input id="pricePerDay" name="listing[pricePerDay]" placeholder="Enter daily rent" class="form-control" required />
            <div class="invalid-feedback">Please enter Price.</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea id="description" name="listing[description]" rows="4" placeholder="Brief about the equipment" class="form-control" required></textarea>
          <div class="invalid-feedback">Please enter the Description.</div>
        </div>

        <div class="mb-3">
          <label for="imageUrl" class="form-label">Upload Image</label>
          <input type="file" id="imageUrl" name="listing[imageUrl]" class="form-control" required/>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" id="location" name="listing[location]" placeholder="e.g., Nashik" class="form-control" required />
            <div class="invalid-feedback">Please enter Location.</div>
          </div>
          
           <!-- ⭐ ADDED: STOCK (required) -->
          <div class="col-md-6 mb-3">
            <label for="stock" class="form-label">Stock</label>
          <input type="number" id="stock" name="listing[stock]" min="0" placeholder="Enter stock quantity" class="form-control" required />
          <div class="invalid-feedback">Please enter available stock.</div>
          </div>
        </div>

        <!-- ⭐ ADDED: CATEGORY (required) -->
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select id="category" name="listing[category]" class="form-control form-select" required>
            <option value="">Select Category</option>
            <option value="groceries">Groceries</option>
            <option value="beauty">Beauty</option>
            <option value="electronics">Electronics</option>
            <option value="snacks">Snacks</option>
            <option value="drinks">Drinks</option>
            <option value="general">General</option>
          </select>
          <div class="invalid-feedback">Please select a Category.</div>
        </div>

        <button type="submit" class="btn-submit">
          <i class="bi bi-cloud-upload-fill me-2"></i> Add Listing
        </button>

</form>

    </div>
  </div>

</div>
</body>
</html>