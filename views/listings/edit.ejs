<% layout("/layouts/boilerplate.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Product | SmartTrolley</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <style>
    /* === SmartTrolley Blue Theme === */
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f8f9fa;
      color: #212529;
    }

    /* Card Styling */
    .edit-card {
      background: #ffffff;
      border-radius: 16px;
      box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
      border: 1px solid rgba(0,0,0,0.05);
      padding: 2.5rem;
      max-width: 800px;
      margin: 2rem auto;
    }

    /* Header */
    .form-header {
      text-align: center;
      margin-bottom: 2rem;
    }
    .form-header h2 {
      font-weight: 700;
      color: #0d6efd; /* SmartTrolley Blue */
    }
    .form-header p {
      color: #6c757d;
      font-size: 0.95rem;
    }

    /* Form Controls */
    .form-label {
      font-weight: 600;
      font-size: 0.9rem;
      color: #495057;
      margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
      background-color: #f8f9fa;
      border: 2px solid #e9ecef;
      border-radius: 10px;
      padding: 0.75rem 1rem;
      font-size: 0.95rem;
      transition: all 0.2s ease;
    }

    .form-control:focus, .form-select:focus {
      background-color: #fff;
      border-color: #0d6efd;
      box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
    }

    /* Image Preview */
    .current-img-preview {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 12px;
      border: 2px solid #dee2e6;
      margin-top: 0.5rem;
    }

    /* Submit Button */
    .btn-update {
      background: linear-gradient(45deg, #0d6efd, #0a58ca);
      border: none;
      color: white;
      font-weight: 600;
      padding: 1rem;
      border-radius: 12px;
      width: 100%;
      margin-top: 1.5rem;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-update:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
      color: white;
    }

    /* File Input Wrapper */
    input[type="file"]::file-selector-button {
      background-color: #e9ecef;
      border: none;
      border-radius: 6px;
      color: #495057;
      padding: 0.5rem 1rem;
      margin-right: 1rem;
      cursor: pointer;
      font-weight: 500;
      transition: background 0.2s;
    }
    input[type="file"]::file-selector-button:hover {
      background-color: #dee2e6;
    }

    /* Back Link */
    .back-link {
        text-decoration: none;
        color: #6c757d;
        font-weight: 500;
        margin-bottom: 1rem;
        display: inline-block;
        transition: color 0.2s;
    }
    .back-link:hover {
        color: #0d6efd;
    }
  </style>
</head>

<body>

  <div class="container pt-4 pb-5">
    
    <a href="/home/listings" class="back-link">
        <i class="bi bi-arrow-left"></i> Cancel & Go Back
    </a>

    <div class="edit-card">
      <div class="form-header">
        <h2>Edit Product Details</h2>
        <p>Update stock, pricing, or specifications</p>
      </div>

      <form method="POST" action="/home/listings/<%=listing._id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="row g-4">
            
            <div class="col-12">
                <label for="title" class="form-label">Product Title</label>
                <input type="text" id="title" name="listing[title]" value="<%=listing.title%>" class="form-control" required />
                <div class="invalid-feedback">Please enter a Title.</div>
            </div>

            <div class="col-md-6">
                <label for="category" class="form-label">Category</label>
                <input type="text" id="category" name="listing[category]" value="<%= listing.category || '' %>" placeholder="e.g. Heavy Machinery" class="form-control" required />
                <div class="invalid-feedback">Please enter a Category.</div>
            </div>

            <div class="col-md-6">
              <label for="type" class="form-label">Type</label>
              <select id="type" name="listing[type]" class="form-control form-select" required>
                <option value="">Select Type</option>
                <option value="chocolate">Chocolate</option>
                <option value="mirinda">Mirinda</option>
                <option value="coke">Coke</option>
                <option value="lays">Lays</option>
                <option value="pringles">Pringles</option>
                <option value="faceCream">Face Cream</option>
                <option value="other">Other</option>
              </select>
              <div class="invalid-feedback">Please choose a Type.</div>
            </div>

            <div class="col-md-6">
                <label for="stock" class="form-label">Stock Available</label>
                <input type="number" id="stock" name="listing[stock]" value="<%= listing.stock || 1 %>" min="0" class="form-control" required />
                <div class="invalid-feedback">Please enter stock quantity.</div>
            </div>

            <div class="col-md-6">
                <label for="pricePerDay" class="form-label">Price per Day (â‚¹)</label>
                <input type="number" id="pricePerDay" name="listing[pricePerDay]" value="<%=listing.pricePerDay%>" class="form-control" required />
                <div class="invalid-feedback">Please enter Price.</div>
            </div>

            <div class="col-12">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="listing[description]" rows="4" class="form-control" required><%=listing.description%></textarea>
                <div class="invalid-feedback">Please enter the Description.</div>
            </div>

            <div class="col-12">
                <div class="card bg-light border-0 p-3">
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
                            <label class="form-label d-block">Current Image</label>
                            <% if(listing.imageUrl && listing.imageUrl.url) { %>
                                <img src="<%=listing.imageUrl.url%>" alt="Current Image" class="current-img-preview">
                            <% } else { %>
                                <div class="text-muted small">No image uploaded</div>
                            <% } %>
                        </div>
                        <div class="col-md-8">
                            <label for="imageUrl" class="form-label">Upload New Image (Optional)</label>
                            <input type="file" id="imageUrl" name="listing[imageUrl]" class="form-control" />
                            <small class="text-muted">Uploading a new image will replace the current one.</small>
                        </div>
                    </div>
                </div>
            </div>

        </div> <button type="submit" class="btn-update">
            <i class="bi bi-check-circle-fill me-2"></i> Update Product
        </button>

      </form>
    </div>
  </div>

</body>
</html>