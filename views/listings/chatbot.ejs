<% layout("/layouts/boilerplate.ejs") %>

<div id="smart-trolley-chat-widget">
    
    <button id="chat-toggle-btn" onclick="toggleChat()">
        <i class="bi bi-robot fs-4"></i>
        <span class="pulse-ring"></span>
    </button>

    <div class="chat-window" id="chat-window">
        
        <div class="chat-header">
            <div class="d-flex align-items-center gap-2">
                <div class="status-dot"></div>
                <div>
                    <h6 class="mb-0 fw-bold">Smart Assistant</h6>
                    <small class="opacity-75" style="font-size: 0.75rem;">Powered by AI</small>
                </div>
            </div>
            <button class="close-btn" onclick="toggleChat()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <div class="chat-body" id="chat-body">
            <div class="message bot">
                <div class="message-content">
                    Hello! I'm your AI Shopping Assistant. üõí <br>
                    I can help you find recipes, check stock, or plan your dinner. What's on your mind?
                </div>
                <div class="message-time">Just now</div>
            </div>
        </div>

        <div class="suggestions-wrapper">
            <div class="suggestion-chip" onclick="sendQuickMessage('Where are the organic apples?')">üçé Find Apples</div>
            <div class="suggestion-chip" onclick="sendQuickMessage('Suggest a dinner recipe')">üçù Dinner Ideas</div>
            <div class="suggestion-chip" onclick="sendQuickMessage('Track my order')">üöö Track Order</div>
        </div>

        <div class="chat-footer">
            <form id="chat-form" onsubmit="handleUserSubmit(event)">
                <input type="text" id="user-input" placeholder="Ask anything..." autocomplete="off">
                <button type="submit" id="send-btn">
                    <i class="bi bi-send-fill"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    /* --- CSS Variables & Widget Styling --- */
    :root {
        --chat-primary: #4361ee;
        --chat-gradient: linear-gradient(135deg, #4361ee, #4cc9f0);
        --chat-bg: #ffffff;
        --chat-user-msg: #4361ee;
        --chat-bot-msg: #f1f3f5;
    }

    /* 1. Floating Button */
    #chat-toggle-btn {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 60px;
        height: 60px;
        background: var(--chat-gradient);
        border: none;
        border-radius: 50%;
        color: white;
        box-shadow: 0 10px 25px rgba(67, 97, 238, 0.4);
        z-index: 9999;
        cursor: pointer;
        transition: transform 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #chat-toggle-btn:hover {
        transform: scale(1.1) rotate(-10deg);
    }

    .pulse-ring {
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        border-radius: 50%;
        border: 2px solid rgba(76, 201, 240, 0.6);
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0% { transform: scale(1); opacity: 0.8; }
        100% { transform: scale(1.5); opacity: 0; }
    }

    /* 2. Chat Window */
    .chat-window {
        position: fixed;
        bottom: 100px;
        right: 30px;
        width: 350px;
        height: 500px;
        background: var(--chat-bg);
        border-radius: 20px;
        box-shadow: 0 5px 40px rgba(0,0,0,0.15);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        z-index: 9998;
        
        /* Animation State: Hidden */
        opacity: 0;
        transform: translateY(20px) scale(0.95);
        pointer-events: none;
        transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
    }

    /* Open State */
    .chat-window.active {
        opacity: 1;
        transform: translateY(0) scale(1);
        pointer-events: all;
    }

    /* Header */
    .chat-header {
        background: var(--chat-gradient);
        padding: 15px 20px;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .status-dot {
        width: 8px; height: 8px; background: #00ff88; border-radius: 50%; box-shadow: 0 0 5px #00ff88;
    }

    .close-btn {
        background: transparent; border: none; color: white; font-size: 1.2rem; cursor: pointer; opacity: 0.8;
    }
    .close-btn:hover { opacity: 1; }

    /* Body */
    .chat-body {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 15px;
        background-color: #f8f9fa;
    }

    /* Messages */
    .message {
        max-width: 80%;
        animation: fadeIn 0.3s ease;
    }
    
    .message-content {
        padding: 10px 15px;
        border-radius: 15px;
        font-size: 0.9rem;
        line-height: 1.4;
        position: relative;
    }

    .message.bot { align-self: flex-start; }
    .message.bot .message-content {
        background: white;
        color: #2b2d42;
        border-bottom-left-radius: 2px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .message.user { align-self: flex-end; }
    .message.user .message-content {
        background: var(--chat-user-msg);
        color: white;
        border-bottom-right-radius: 2px;
        box-shadow: 0 2px 5px rgba(67, 97, 238, 0.2);
    }

    .message-time {
        font-size: 0.65rem; color: #adb5bd; margin-top: 4px; text-align: right;
    }

    /* Suggestions */
    .suggestions-wrapper {
        padding: 10px 15px;
        background: white;
        display: flex;
        gap: 8px;
        overflow-x: auto;
        white-space: nowrap;
        border-top: 1px solid #f0f0f0;
    }
    
    .suggestions-wrapper::-webkit-scrollbar { display: none; }

    .suggestion-chip {
        font-size: 0.75rem;
        padding: 6px 12px;
        background: #f1f3f5;
        border-radius: 20px;
        cursor: pointer;
        color: #495057;
        border: 1px solid #dee2e6;
        transition: all 0.2s;
    }

    .suggestion-chip:hover {
        background: var(--chat-primary);
        color: white;
        border-color: var(--chat-primary);
    }

    /* Footer */
    .chat-footer {
        padding: 15px;
        background: white;
        border-top: 1px solid #eee;
    }

    #chat-form {
        display: flex;
        gap: 10px;
        background: #f8f9fa;
        padding: 5px 10px;
        border-radius: 25px;
        border: 1px solid #e9ecef;
    }

    #chat-form:focus-within {
        border-color: var(--chat-primary);
        background: white;
    }

    #user-input {
        border: none;
        background: transparent;
        flex: 1;
        outline: none;
        font-size: 0.9rem;
        padding: 8px;
    }

    #send-btn {
        background: transparent;
        border: none;
        color: var(--chat-primary);
        font-size: 1.1rem;
        cursor: pointer;
        transition: transform 0.2s;
    }
    
    #send-btn:hover { transform: scale(1.1); }
    #send-btn:disabled { color: #ccc; cursor: default; }

    /* Typing Indicator */
    .typing-indicator {
        display: inline-flex; gap: 4px; padding: 10px 15px; background: white; border-radius: 15px; border-bottom-left-radius: 2px;
    }
    .dot { width: 6px; height: 6px; background: #adb5bd; border-radius: 50%; animation: bounce 1.4s infinite; }
    .dot:nth-child(1) { animation-delay: 0s; }
    .dot:nth-child(2) { animation-delay: 0.2s; }
    .dot:nth-child(3) { animation-delay: 0.4s; }

    @keyframes bounce { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-4px); } }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

    /* Mobile Responsive */
    @media (max-width: 480px) {
        .chat-window {
            bottom: 0; right: 0; width: 100%; height: 100%; border-radius: 0;
        }
        #chat-toggle-btn { bottom: 20px; right: 20px; }
    }
</style>

<script>
    // --- CONFIGURATION ---
    // ‚ö†Ô∏è REPLACE THIS WITH YOUR GEMINI API KEY FROM: https://aistudio.google.com/
    // It's free to get a key.
    const GEMINI_API_KEY = 'YOUR_API_KEY_HERE'; 
    const API_URL = `https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent?key=${GEMINI_API_KEY}`;

    const chatBody = document.getElementById('chat-body');
    const userInput = document.getElementById('user-input');
    const sendBtn = document.getElementById('send-btn');

    // 1. Toggle Chat Window
    function toggleChat() {
        const window = document.getElementById('chat-window');
        window.classList.toggle('active');
        if(window.classList.contains('active')) {
            userInput.focus();
        }
    }

    // 2. Handle User Submit
    async function handleUserSubmit(e) {
        e.preventDefault();
        const text = userInput.value.trim();
        if (!text) return;

        // Add User Message
        addMessage(text, 'user');
        userInput.value = '';
        sendBtn.disabled = true;

        // Show Loading Animation
        const loadingId = addTypingIndicator();

        try {
            // CALL AI
            const aiResponse = await fetchAIResponse(text);
            
            // Remove Loading & Add Bot Message
            removeMessage(loadingId);
            addMessage(aiResponse, 'bot');
        } catch (error) {
            console.error(error);
            removeMessage(loadingId);
            addMessage("I'm having trouble connecting to the network right now. Please try again.", 'bot');
        } finally {
            sendBtn.disabled = false;
        }
    }

    // 3. Quick Chips
    function sendQuickMessage(text) {
        userInput.value = text;
        handleUserSubmit(new Event('submit'));
    }

    // 4. Add Message to DOM
    function addMessage(text, sender) {
        const div = document.createElement('div');
        div.className = `message ${sender}`;
        
        const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

        div.innerHTML = `
            <div class="message-content">${formatText(text)}</div>
            <div class="message-time">${time}</div>
        `;
        
        chatBody.appendChild(div);
        chatBody.scrollTop = chatBody.scrollHeight;
        return div;
    }

    // 5. Typing Indicator
    function addTypingIndicator() {
        const id = 'typing-' + Date.now();
        const div = document.createElement('div');
        div.className = 'message bot';
        div.id = id;
        div.innerHTML = `
            <div class="typing-indicator">
                <div class="dot"></div><div class="dot"></div><div class="dot"></div>
            </div>
        `;
        chatBody.appendChild(div);
        chatBody.scrollTop = chatBody.scrollHeight;
        return id;
    }

    function removeMessage(id) {
        const el = document.getElementById(id);
        if (el) el.remove();
    }

    // 6. FETCH REAL AI (GEMINI)
    async function fetchAIResponse(userMessage) {
        // If user hasn't set a key yet, return a mock response
        if (GEMINI_API_KEY === 'YOUR_API_KEY_HERE') {
            await new Promise(r => setTimeout(r, 1000)); // Fake delay
            return "Please add your Google Gemini API Key in the code to enable real AI features! Currently running in demo mode.";
        }

        const systemContext = "You are a helpful assistant for 'Smart Trolley', a smart grocery store system. You help users find products, suggest recipes based on ingredients, and check order status. Keep answers short, friendly, and emoji-rich.";

        const payload = {
            contents: [{
                parts: [{
                    text: `${systemContext}\n\nUser: ${userMessage}\nAssistant:`
                }]
            }]
        };

        const response = await fetch(API_URL, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        });

        const data = await response.json();
        
        // Extract text from Gemini response structure
        if(data.candidates && data.candidates[0].content) {
             return data.candidates[0].content.parts[0].text;
        } else {
             return "I couldn't quite understand that. Could you rephrase?";
        }
    }

    // Helper: Simple Markdown formatting for bold text
    function formatText(text) {
        return text.replace(/\*\*(.*?)\*\*/g, '<b>$1</b>').replace(/\n/g, '<br>');
    }
</script>