<% layout("/layouts/boilerplate.ejs") %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SmartTrolley - Grocery Assistant</title>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap"
            rel="stylesheet">

        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: 'Poppins', sans-serif;
                /* Modern Font */
            }

            body {
                margin: 0;
                padding: 0;
                /* Modern, clean background for e-commerce */
                background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
                min-height: 100vh;
                align-items: center;
            }

            .chatbot-main-container {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                margin: 1rem 0 1rem 0;
            }

            .chatbot-container {
                width: 100%;
                max-width: 450px;
                height: 700px;
                background: #ffffff;
                border-radius: 24px;
                /* Softer corners */
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
                display: flex;
                flex-direction: column;
                justify-content: center;
                overflow: hidden;
                border: 1px solid rgba(255, 255, 255, 0.3);
            }

            .chatbot-header {
                /* Vibrant Gradient for SmartTrolley */
                background: linear-gradient(135deg, #ff6b6b 0%, #ee5253 100%);
                color: white;
                padding: 25px 20px;
                text-align: center;
                position: relative;
                box-shadow: 0 4px 15px rgba(238, 82, 83, 0.2);
                z-index: 10;
            }

            .chatbot-header h1 {
                font-size: 1.4em;
                margin-bottom: 5px;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
                font-weight: 600;
                letter-spacing: 0.5px;
            }

            .chatbot-header p {
                opacity: 0.95;
                font-size: 0.85em;
                font-weight: 300;
            }

            .status-indicator {
                width: 10px;
                height: 10px;
                background: #54ff7d;
                /* Bright active green */
                border-radius: 50%;
                position: absolute;
                top: 25px;
                right: 25px;
                box-shadow: 0 0 10px #54ff7d;
            }

            .chat-messages {
                flex: 1;
                padding: 20px;
                overflow-y: auto;
                background: #f8f9fc;
                display: flex;
                flex-direction: column;
                scroll-behavior: smooth;
            }

            /* Scrollbar Styling */
            .chat-messages::-webkit-scrollbar {
                width: 6px;
            }

            .chat-messages::-webkit-scrollbar-thumb {
                background-color: #ddd;
                border-radius: 10px;
            }

            .message {
                margin-bottom: 15px;
                display: flex;
                align-items: flex-start;
                max-width: 85%;
                animation: fadeIn 0.3s ease;
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(10px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .message.user {
                align-self: flex-end;
            }

            .message.bot {
                align-self: flex-start;
            }

            .message-content {
                padding: 12px 18px;
                border-radius: 18px;
                font-size: 0.9em;
                line-height: 1.5;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
            }

            .message.user .message-content {
                /* Matching Header Theme */
                background: #ff6b6b;
                color: white;
                border-bottom-right-radius: 4px;
            }

            .message.bot .message-content {
                background: white;
                color: #4a4a4a;
                border: 1px solid #f0f0f0;
                border-bottom-left-radius: 4px;
            }

            .bot-avatar {
                width: 35px;
                height: 35px;
                border-radius: 50%;
                background: linear-gradient(135deg, #ff6b6b 0%, #ee5253 100%);
                color: white;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-right: 10px;
                box-shadow: 0 4px 10px rgba(238, 82, 83, 0.2);
            }

            .bot-avatar svg {
                width: 18px;
                height: 18px;
            }

            .typing-indicator {
                display: none;
                padding: 12px 16px;
                background: white;
                border: 1px solid #f0f0f0;
                border-radius: 18px;
                border-bottom-left-radius: 4px;
                max-width: 70%;
                align-self: flex-start;
                margin-left: 45px;
                /* Offset for avatar */
            }

            .typing-dots {
                display: flex;
                gap: 4px;
            }

            .typing-dot {
                width: 6px;
                height: 6px;
                background: #adb5bd;
                border-radius: 50%;
                animation: typing-bounce 1.4s infinite ease-in-out;
            }

            .typing-dot:nth-child(1) {
                animation-delay: -0.32s;
            }

            .typing-dot:nth-child(2) {
                animation-delay: -0.16s;
            }

            @keyframes typing-bounce {

                0%,
                80%,
                100% {
                    transform: scale(0.6);
                    opacity: 0.5;
                }

                40% {
                    transform: scale(1);
                    opacity: 1;
                }
            }

            .chat-input-container {
                padding: 20px;
                background: white;
                border-top: 1px solid #f0f0f0;
            }

            .chat-input-wrapper {
                display: flex;
                gap: 12px;
                align-items: flex-end;
                background: #f8f9fc;
                padding: 8px;
                border-radius: 30px;
                border: 1px solid transparent;
                transition: all 0.3s;
            }

            .chat-input-wrapper:focus-within {
                border-color: #ff6b6b;
                background: #fff;
                box-shadow: 0 0 0 4px rgba(255, 107, 107, 0.1);
            }

            #chat-input {
                flex: 1;
                padding: 10px 15px;
                border: none;
                background: transparent;
                outline: none;
                font-size: 0.95em;
                resize: none;
                max-height: 100px;
                min-height: 24px;
                line-height: 1.4;
                color: #333;
            }

            #send-button {
                background: #ff6b6b;
                color: white;
                border: none;
                width: 40px;
                height: 40px;
                border-radius: 50%;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s ease;
                box-shadow: 0 4px 10px rgba(255, 107, 107, 0.3);
            }

            #send-button:hover {
                background: #ee5253;
                transform: scale(1.05);
            }

            #send-button:disabled {
                background: #e0e0e0;
                cursor: not-allowed;
                transform: none;
                box-shadow: none;
            }

            .send-icon {
                width: 18px;
                height: 18px;
                margin-left: 2px;
                /* Visual alignment */
            }

            .suggestions {
                display: flex;
                gap: 8px;
                margin-bottom: 12px;
                overflow-x: auto;
                padding-bottom: 5px;
                -ms-overflow-style: none;
                /* IE and Edge */
                scrollbar-width: none;
                /* Firefox */
            }

            .suggestions::-webkit-scrollbar {
                display: none;
            }

            .suggestion-chip {
                background: #fff0f0;
                color: #ff6b6b;
                border: 1px solid #ffdcdc;
                padding: 8px 14px;
                border-radius: 20px;
                font-size: 0.75em;
                font-weight: 500;
                cursor: pointer;
                transition: all 0.2s ease;
                white-space: nowrap;
            }

            .suggestion-chip:hover {
                background: #ff6b6b;
                color: white;
                border-color: #ff6b6b;
            }

            .equipment-category {
                display: flex;
                flex-wrap: wrap;
                gap: 8px;
                margin-top: 0;
                margin-bottom: 12px;
            }

            .category-chip {
                background: #f8f9fa;
                border: 1px solid #e9ecef;
                padding: 6px 12px;
                border-radius: 12px;
                font-size: 0.75em;
                cursor: pointer;
                transition: all 0.2s ease;
                color: #555;
            }

            .category-chip:hover {
                background: #333;
                color: white;
                border-color: #333;
            }

            /* Responsive Design */
            @media (max-width: 480px) {
                .chatbot-container {
                    height: 100vh;
                    max-width: none;
                    border-radius: 0;
                    border: none;
                }

                body {
                    padding: 0;
                }

                .chatbot-main-container {
                    margin: 0;
                }
            }

            .message-time {
                font-size: 0.65em;
                opacity: 0.5;
                margin-top: 4px;
                text-align: right;
            }

            .bot-message-wrapper {
                display: flex;
                align-items: flex-start;
                width: 100%;
            }
        </style>
    </head>

    <body>
        <div class="chatbot-main-container">

            <div class="chatbot-container">
                <div class="chatbot-header">
                    <div class="status-indicator"></div>
                    <h1>
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="9" cy="21" r="1"></circle>
                            <circle cx="20" cy="21" r="1"></circle>
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                        </svg>
                        SmartTrolley Support
                    </h1>
                    <p>Your grocery & shopping assistant</p>
                </div>

                <div class="chat-messages" id="chat-messages">
                </div>

                <div class="chat-input-container">
                    <div class="suggestions">
                        <div class="suggestion-chip" data-prompt="Where is my order?">Track Order</div>
                        <div class="suggestion-chip" data-prompt="What are today's deals?">Daily Deals</div>
                        <div class="suggestion-chip" data-prompt="Do you offer free delivery?">Delivery Info</div>
                    </div>

                    <div class="equipment-category">
                        <div class="category-chip" data-prompt="Show me fresh fruits">üçé Fruits</div>
                        <div class="category-chip" data-prompt="I need fresh vegetables">ü•¶ Veggies</div>
                        <div class="category-chip" data-prompt="Show dairy products">ü•õ Dairy</div>
                        <div class="category-chip" data-prompt="Any snacks available?">üç™ Snacks</div>
                    </div>

                    <div class="chat-input-wrapper">
                        <textarea id="chat-input" placeholder="Type a message..." rows="1"></textarea>
                        <button id="send-button">
                            <svg class="send-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="22" y1="2" x2="11" y2="13"></line>
                                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <script>
                class SmartTrolleyChatbot {
                    constructor() {
                        this.messages = [];
                        this.isProcessing = false;
                        this.initializeElements();
                        this.setupEventListeners();
                        this.addWelcomeMessage();
                    }

                    initializeElements() {
                        this.chatMessages = document.getElementById('chat-messages');
                        this.chatInput = document.getElementById('chat-input');
                        this.sendButton = document.getElementById('send-button');
                        this.typingIndicator = this.createTypingIndicator();
                    }

                    createTypingIndicator() {
                        const indicator = document.createElement('div');
                        indicator.className = 'typing-indicator';
                        const dots = document.createElement('div');
                        dots.className = 'typing-dots';
                        dots.innerHTML = `
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                    `;
                        indicator.appendChild(dots);
                        return indicator;
                    }

                    setupEventListeners() {
                        this.sendButton.addEventListener('click', () => this.sendMessage());

                        this.chatInput.addEventListener('keypress', (e) => {
                            if (e.key === 'Enter' && !e.shiftKey) {
                                e.preventDefault();
                                this.sendMessage();
                            }
                        });

                        this.chatInput.addEventListener('input', () => {
                            this.autoResizeTextarea();
                        });

                        // Suggestion chips logic
                        document.querySelectorAll('.suggestion-chip, .category-chip').forEach(chip => {
                            chip.addEventListener('click', () => {
                                const prompt = chip.getAttribute('data-prompt');
                                this.chatInput.value = prompt;
                                this.sendMessage();
                            });
                        });
                    }

                    autoResizeTextarea() {
                        this.chatInput.style.height = 'auto';
                        this.chatInput.style.height = Math.min(this.chatInput.scrollHeight, 100) + 'px';
                    }

                    addWelcomeMessage() {
                        const welcomeMessage = "Hi there! Welcome to SmartTrolley üõí. I can help you find groceries, track your orders, or check out today's freshest deals. What are you looking for today?";
                        this.addMessage(welcomeMessage, 'bot');
                    }

                    async sendMessage() {
                        const message = this.chatInput.value.trim();

                        if (!message || this.isProcessing) return;

                        // Add user message
                        this.addMessage(message, 'user');
                        this.chatInput.value = '';
                        this.autoResizeTextarea();

                        // Show typing indicator
                        this.showTypingIndicator();

                        try {
                            this.isProcessing = true;
                            this.sendButton.disabled = true;

                            // Get AI response
                            const response = await this.getAIResponse(message);

                            // Remove typing indicator and add bot response
                            this.hideTypingIndicator();
                            this.addMessage(response, 'bot');

                        } catch (error) {
                            console.error('Error:', error);
                            this.hideTypingIndicator();
                            this.addMessage("I'm sorry, I'm having trouble connecting to the store server. Please try again in a moment.", 'bot');
                        } finally {
                            this.isProcessing = false;
                            this.sendButton.disabled = false;
                            this.chatInput.focus();
                        }
                    }

                    async getAIResponse(userMessage) {
                        // Mock API delay to simulate thinking
                        await new Promise(resolve => setTimeout(resolve, 800 + Math.random() * 800));

                        const lowerMessage = userMessage.toLowerCase();

                        // GROCERY & SHOPPING LOGIC

                        // Fresh Produce
                        if (lowerMessage.includes('fruit') || lowerMessage.includes('apple') || lowerMessage.includes('banana')) {
                            return

                            "[Image of fresh fruit stand in a supermarket]"
                            "We have fresh fruits arriving daily! üçé Current stock includes Organic Apples, Bananas, Seasonal Mangoes, and Berries. Check the 'Fresh Produce' section for today's discounts.";

                        } else if (lowerMessage.includes('vegetable') || lowerMessage.includes('onion') || lowerMessage.includes('tomato')) {
                            return

                            "[Image of fresh vegetables displayed in a market]"
                            "Our vegetables are farm-fresh! ü•¶ We have Tomatoes, Onions, Potatoes, Spinach, and exotic veggies like Broccoli and Bell Peppers available right now.";

                            // Dairy & Essentials
                        } else if (lowerMessage.includes('milk') || lowerMessage.includes('dairy') || lowerMessage.includes('egg')) {
                            return "For Dairy & Eggs ü•õ, we stock Amul, Mother Dairy, and local organic options. Fresh Paneer, Curd, and Farm eggs are currently in stock.";

                        } else if (lowerMessage.includes('bread') || lowerMessage.includes('bakery')) {
                            return "Our Bakery section smells amazing! üçû We have Whole Wheat Bread, Multigrain, Buns, and fresh Cookies. All baked fresh this morning.";

                            // Logistics
                        } else if (lowerMessage.includes('delivery') || lowerMessage.includes('time') || lowerMessage.includes('shipping')) {
                            return

                            "[Image of a grocery delivery van]"
                            "We offer Express Delivery (within 2 hours) üöö for select pin codes and Standard Delivery (next day). Orders above ‚Çπ500 get FREE delivery!";

                        } else if (lowerMessage.includes('order') || lowerMessage.includes('track') || lowerMessage.includes('status')) {
                            return "To track your order, please visit the 'My Orders' section in the menu. If you have your Order ID, paste it here and I can check the status for you.";

                        } else if (lowerMessage.includes('pay') || lowerMessage.includes('payment') || lowerMessage.includes('card')) {
                            return "We accept all major Credit/Debit Cards üí≥, UPI (Google Pay, PhonePe), Net Banking, and Cash on Delivery (COD) for orders up to ‚Çπ2000.";

                        } else if (lowerMessage.includes('return') || lowerMessage.includes('refund')) {
                            return "Not happy with the freshness? ü•ï We have a 'No-Questions-Asked' return policy for perishable items at the time of delivery. Refunds are processed to your source account within 24 hours.";

                            // General
                        } else if (lowerMessage.includes('deal') || lowerMessage.includes('offer') || lowerMessage.includes('discount')) {
                            return "Today's Top Deals: üè∑Ô∏è\n1. 20% off on all Organic Pulses\n2. Buy 1 Get 1 Free on select Biscuits\n3. ‚Çπ50 cashback on UPI payments above ‚Çπ500.";

                        } else if (lowerMessage.includes('hello') || lowerMessage.includes('hi')) {
                            return "Hello there! üëã Ready to fill your SmartTrolley? Ask me about fruits, veggies, or today's special offers!";

                        } else {
                            return "I can help you find groceries, check prices, or track orders. Try asking 'Show me fresh fruits' or 'Do you have discounts today?'.";
                        }
                    }

                    addMessage(content, sender) {
                        const messageDiv = document.createElement('div');
                        messageDiv.className = `message ${sender}`;

                        if (sender === 'bot') {
                            const wrapperDiv = document.createElement('div');
                            wrapperDiv.className = 'bot-message-wrapper';

                            const avatarDiv = document.createElement('div');
                            avatarDiv.className = 'bot-avatar';
                            // Robot Icon
                            avatarDiv.innerHTML = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="10" rx="2"></rect><circle cx="12" cy="5" r="2"></circle><path d="M12 7v4"></path><line x1="8" y1="16" x2="8" y2="16"></line><line x1="16" y1="16" x2="16" y2="16"></line></svg>`;

                            const contentDiv = document.createElement('div');
                            contentDiv.className = 'message-content';
                            contentDiv.textContent = content;

                            wrapperDiv.appendChild(avatarDiv);
                            wrapperDiv.appendChild(contentDiv);
                            messageDiv.appendChild(wrapperDiv);
                        } else {
                            const contentDiv = document.createElement('div');
                            contentDiv.className = 'message-content';
                            contentDiv.textContent = content;

                            const timeDiv = document.createElement('div');
                            timeDiv.className = 'message-time';
                            timeDiv.textContent = this.getCurrentTime();

                            messageDiv.appendChild(contentDiv);
                            messageDiv.appendChild(timeDiv);
                        }

                        this.chatMessages.appendChild(messageDiv);
                        this.chatMessages.scrollTop = this.chatMessages.scrollHeight;

                        this.messages.push({ sender, content, timestamp: new Date() });
                    }

                    getCurrentTime() {
                        const now = new Date();
                        return now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                    }

                    showTypingIndicator() {
                        this.chatMessages.appendChild(this.typingIndicator);
                        this.typingIndicator.style.display = 'block';
                        this.chatMessages.scrollTop = this.chatMessages.scrollHeight;
                    }

                    hideTypingIndicator() {
                        this.typingIndicator.style.display = 'none';
                    }
                }

                document.addEventListener('DOMContentLoaded', () => {
                    new SmartTrolleyChatbot();
                });
            </script>
        </div>
    </body>

    </html>