<% layout("/layouts/boilerplate.ejs") %>

<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<body>

  <div class="tech-background"></div>

  <section class="py-8 position-relative overflow-hidden ">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>

    <div class="container position-relative z-2 mt-4">
      
      <div class="text-center mb-6" data-aos="fade-down">
        <h6 class="text-primary fw-bold text-uppercase letter-spacing-2">24/7 Support</h6>
        <h1 class="display-4 fw-bold text-dark">Get in Touch</h1>
        <p class="text-muted lead mx-auto" style="max-width: 600px;">
          Have questions about the Smart Trolley hardware integration? Need technical support or a demo? We are here to help.
        </p>
      </div>

      <div class="row g-5">
        
        <div class="col-lg-5" data-aos="fade-right" data-aos-delay="100">
          
          <div class="d-flex flex-column gap-4 mb-5">
            
            <div class="contact-card p-4 bg-white rounded-4 shadow-sm d-flex align-items-center gap-3">
              <div class="icon-box bg-primary-subtle text-primary">
                <i class="fas fa-map-marker-alt fs-5"></i>
              </div>
              <div>
                <h6 class="fw-bold mb-0">Headquarters</h6>
                <p class="text-muted small mb-0">Tech Park, Bengaluru, India</p>
              </div>
            </div>

            <div class="contact-card p-4 bg-white rounded-4 shadow-sm d-flex align-items-center gap-3">
              <div class="icon-box bg-success-subtle text-success">
                <i class="fas fa-envelope fs-5"></i>
              </div>
              <div>
                <h6 class="fw-bold mb-0">Email Us</h6>
                <p class="text-muted small mb-0">support@smarttrolley.com</p>
              </div>
            </div>

            <div class="contact-card p-4 bg-white rounded-4 shadow-sm d-flex align-items-center gap-3">
              <div class="icon-box bg-warning-subtle text-warning">
                <i class="fas fa-phone-alt fs-5"></i>
              </div>
              <div>
                <h6 class="fw-bold mb-0">Call Us</h6>
                <p class="text-muted small mb-0">+91 98765 43210</p>
              </div>
            </div>
          </div>

          <div class="map-container rounded-4 overflow-hidden shadow-sm border">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3888.001696423075!2d77.63916961482196!3d12.971754990855734!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae1670c9b44e6d%3A0xf8dfc3e8517e4fe0!2sBengaluru%2C%20Karnataka!5e0!3m2!1sen!2sin!4v1633023222534!5m2!1sen!2sin" 
              width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy">
            </iframe>
          </div>

        </div>

        <div class="col-lg-7" data-aos="fade-left" data-aos-delay="200">
          <div class="form-container bg-white rounded-5 p-5 shadow-lg position-relative overflow-hidden">
            <div class="top-line"></div>

            <h3 class="fw-bold mb-4">Send a Message</h3>
            
            <form action="/contact" method="POST" class="needs-validation" novalidate>
              <div class="row g-3">
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="text" class="form-control bg-light border-0" id="name" name="name" placeholder="John Doe" required>
                    <label for="name">Your Name</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="email" class="form-control bg-light border-0" id="email" name="email" placeholder="name@example.com" required>
                    <label for="email">Email Address</label>
                  </div>
                </div>
                
                <div class="col-12">
                  <div class="form-floating">
                    <select class="form-select bg-light border-0" id="subject" name="subject">
                      <option selected>General Inquiry</option>
                      <option value="1">Hardware Support (Trolley)</option>
                      <option value="2">Software/App Issue</option>
                      <option value="3">Business Partnership</option>
                    </select>
                    <label for="subject">Subject</label>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-floating">
                    <textarea class="form-control bg-light border-0" placeholder="Leave a comment here" id="message" name="message" style="height: 150px" required></textarea>
                    <label for="message">How can we help?</label>
                  </div>
                </div>

                <div class="col-12 mt-4">
                  <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold btn-glow d-flex align-items-center justify-content-center gap-2">
                    <span>Send Message</span>
                    <i class="fas fa-paper-plane"></i>
                  </button>
                </div>
              </div>
            </form>

            <div class="corner-decoration"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-6 bg-white border-top">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <h4 class="fw-bold mb-4">Common Questions</h4>
          <div class="accordion accordion-flush" id="accordionFlushExample">
            <div class="accordion-item">
              <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                  How does the Smart Trolley sync data?
                </button>
              </h2>
              <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body text-start text-muted">The trolley uses an ESP8266/ESP32 WiFi module to send real-time sensor data to our MongoDB Cloud database, which is then fetched by this website.</div>
              </div>
            </div>
            <div class="accordion-item">
              <h2 class="accordion-header" id="flush-headingTwo">
                <button class="accordion-button collapsed fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                  What happens if the battery dies?
                </button>
              </h2>
              <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body text-start text-muted">The session is saved on the cloud. You can swap trolleys, log in to the new one, and your cart items will be retrieved automatically.</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({
      once: true,
      offset: 100
    });
  </script>

  <style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4cc9f0;
      --font-main: 'Outfit', sans-serif;
    }

    body {
      font-family: var(--font-main);
      color: #2b2d42;
      background-color: #f8f9fa;
    }

    /* Tech Background (Same as Home) */
    .tech-background {
      position: fixed;
      top: 0; left: 0; width: 100%; height: 100%; z-index: -1;
      background-color: #f8faff;
      background-image: linear-gradient(#e5e7eb 1px, transparent 1px),
        linear-gradient(90deg, #e5e7eb 1px, transparent 1px);
      background-size: 40px 40px;
      opacity: 0.5;
    }

    /* Blobs */
    .blob {
      position: absolute;
      filter: blur(80px);
      z-index: 1;
      opacity: 0.5;
    }
    .blob-1 { top: -10%; right: -10%; width: 400px; height: 400px; background: rgba(67, 97, 238, 0.15); border-radius: 50%; }
    .blob-2 { bottom: 10%; left: -10%; width: 300px; height: 300px; background: rgba(76, 201, 240, 0.15); border-radius: 50%; }

    /* Contact Cards */
    .contact-card {
      transition: all 0.3s ease;
      border: 1px solid rgba(0,0,0,0.05);
    }
    .contact-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(67, 97, 238, 0.1) !important;
      border-color: var(--primary-color);
    }

    .icon-box {
      width: 50px; height: 50px;
      border-radius: 12px;
      display: flex; align-items: center; justify-content: center;
      flex-shrink: 0;
    }

    /* Form Styling */
    .form-container {
      border: 1px solid rgba(0,0,0,0.05);
    }
    
    .form-control:focus, .form-select:focus {
      background-color: #fff;
      box-shadow: none;
      border: 1px solid var(--primary-color) !important;
    }

    /* Decorative Elements */
    .top-line {
      position: absolute;
      top: 0; left: 0; width: 100%; height: 4px;
      background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    }

    .corner-decoration {
      position: absolute;
      bottom: 0; right: 0;
      width: 100px; height: 100px;
      background: linear-gradient(135deg, transparent 50%, rgba(67, 97, 238, 0.05) 50%);
      pointer-events: none;
    }

    /* Button Glow */
    .btn-primary {
      background: var(--primary-color);
      border: none;
      transition: all 0.3s ease;
    }
    .btn-glow:hover {
      background: var(--secondary-color);
      box-shadow: 0 5px 20px rgba(67, 97, 238, 0.4);
      transform: translateY(-2px);
    }
  </style>
</body>