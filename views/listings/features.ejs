<% layout("/layouts/boilerplate.ejs") %>

<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">

<body>
  <div class="tech-background"></div>

  <section class="features-header text-center">
    <div class="container position-relative z-2">
      <div data-aos="fade-down">
        <h6 class="text-primary fw-bold text-uppercase letter-spacing-2 mb-3">Innovation in Aisle 5</h6>
        <h1 class="display-4 fw-bold text-dark mb-4">Features that Redefine Shopping</h1>
        <p class="lead text-muted mx-auto" style="max-width: 700px;">
          Explore the technology packed into our Smart Trolley designed to make your grocery runs faster, easier, and smarter.
        </p>
      </div>
    </div>
  </section>

  <section class="py-8 overflow-hidden">
    <div class="container">
      <div class="row align-items-center gy-5">
        <div class="col-lg-6 order-2 order-lg-1" data-aos="fade-right">
          <div class="d-inline-flex align-items-center px-3 py-1 rounded-pill bg-primary-subtle text-primary fw-semibold mb-4">
            <i class="fas fa-bolt me-2"></i> The Core Advantage
          </div>
          <h2 class="display-5 fw-bold mb-4">Instant Scan & Go Technology</h2>
          <p class="lead text-muted mb-4">
            Forget the checkout line. Our advanced RFID and computer vision system automatically detects items as you place them in the cart.
          </p>
          <ul class="list-unstyled text-muted v-stack gap-3 mb-5">
            <li class="d-flex align-items-center">
              <i class="fas fa-check-circle text-success me-3 fs-5"></i>
              <span>99.9% Scanning Accuracy</span>
            </li>
            <li class="d-flex align-items-center">
              <i class="fas fa-check-circle text-success me-3 fs-5"></i>
              <span>Works with fresh produce & packaged goods</span>
            </li>
            <li class="d-flex align-items-center">
              <i class="fas fa-check-circle text-success me-3 fs-5"></i>
              <span>Instant removal detection if you change your mind</span>
            </li>
          </ul>
          <a href="/signup" class="btn btn-primary rounded-pill px-5 py-3 fw-bold btn-glow">
            Try It Now
          </a>
        </div>
        
        <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left" data-aos-delay="200">
          <div class="illustration-wrapper floating-animate pe-lg-5">
            <img src="https://placehold.co/600x500/eef2ff/4361ee?text=Automatic+Scanning+Illustration" alt="Smart Scanning Illustration" class="img-fluid rounded-4 shadow-lg">
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-8 bg-light-transparent position-relative">
    <div class="container position-relative z-2">
      <div class="text-center mb-6" data-aos="fade-up">
        <h2 class="fw-bold">Everything You Need on Wheels</h2>
        <p class="text-muted">A complete ecosystem integrated directly into the trolley handle.</p>
      </div>

      <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        
        <div class="col" data-aos="fade-up" data-aos-delay="100">
          <div class="glass-card h-100 p-5 feature-card-hover">
            <div class="icon-box bg-gradient-primary mb-4">
              <i class="fas fa-calculator text-white fs-3"></i>
            </div>
            <h4 class="fw-bold mb-3">Real-Time Budgeting</h4>
            <p class="text-muted mb-0">The on-board tablet shows your running total instantly. Set a budget limit and get alerted before you overspend.</p>
          </div>
        </div>

        <div class="col" data-aos="fade-up" data-aos-delay="200">
          <div class="glass-card h-100 p-5 feature-card-hover">
            <div class="icon-box bg-gradient-accent mb-4">
              <i class="fas fa-map-marked-alt text-white fs-3"></i>
            </div>
            <h4 class="fw-bold mb-3">Indoor Navigation</h4>
            <p class="text-muted mb-0">Can't find the exotic spices? The built-in map guides you turn-by-turn straight to the product's aisle location.</p>
          </div>
        </div>

        <div class="col" data-aos="fade-up" data-aos-delay="300">
          <div class="glass-card h-100 p-5 feature-card-hover">
            <div class="icon-box bg-gradient-success mb-4">
              <i class="fas fa-shield-alt text-white fs-3"></i>
            </div>
            <h4 class="fw-bold mb-3">Smart Security</h4>
            <p class="text-muted mb-0">Weight sensors cross-reference with scanned items to ensure items aren't added accidentally without being billed.</p>
          </div>
        </div>

         <div class="col" data-aos="fade-up" data-aos-delay="400">
          <div class="glass-card h-100 p-5 feature-card-hover">
            <div class="icon-box bg-gradient-warning mb-4">
              <i class="fas fa-mobile-alt text-white fs-3"></i>
            </div>
            <h4 class="fw-bold mb-3">Mobile App Sync</h4>
            <p class="text-muted mb-0">Create your shopping list at home on our app. When you unlock a trolley, your list syncs automatically.</p>
          </div>
        </div>

         <div class="col" data-aos="fade-up" data-aos-delay="500">
          <div class="glass-card h-100 p-5 feature-card-hover">
            <div class="icon-box bg-gradient-info mb-4">
              <i class="fas fa-receipt text-white fs-3"></i>
            </div>
            <h4 class="fw-bold mb-3">Digital Receipts</h4>
            <p class="text-muted mb-0">Save paper. Once you pay, an itemized digital receipt is instantly sent to your account history and email.</p>
          </div>
        </div>

         <div class="col" data-aos="fade-up" data-aos-delay="600">
          <div class="glass-card h-100 p-5 feature-card-hover">
            <div class="icon-box bg-gradient-danger mb-4">
              <i class="fas fa-charging-station text-white fs-3"></i>
            </div>
            <h4 class="fw-bold mb-3">Phone Charging</h4>
            <p class="text-muted mb-0">Integrated USB ports allow you to charge your device while you shop, using the trolley's internal battery.</p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <section class="py-8">
    <div class="container" data-aos="zoom-in">
      <div class="cta-box bg-dark text-white p-5 p-lg-6 rounded-5 text-center position-relative overflow-hidden">
        <div class="circuit-pattern"></div> <div class="position-relative z-2">
         <h2 class="fw-bold display-5 mb-4">Ready to experience it?</h2>
         <p class="lead opacity-75 mb-5 mx-auto" style="max-width: 600px;">
           Find a partner store near you and start shopping the smart way today.
         </p>
         <button class="btn btn-primary btn-lg rounded-pill px-5 py-3 fw-bold btn-glow">
           Find a Store Location
         </button>
        </div>
      </div>
    </div>
  </section>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({
      once: true, /* Animations only happen once */
      duration: 800, /* Animation duration */
      offset: 120 /* Trigger offset */
    });
  </script>

  <style>
    /* 1. Global & Variables */
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4cc9f0;
      --success-color: #2ec4b6;
      --warning-color: #ff9f1c;
      --danger-color: #e71d36;
      --font-main: 'Outfit', sans-serif;
    }

    body {
      font-family: var(--font-main);
      background-color: #f8f9fa;
      /* Ensure padding for fixed navbar */
      padding-top: 85px; 
    }

    /* The Tech Grid Background */
    .tech-background {
      position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;
      background-color: #f8faff;
      background-image: linear-gradient(#e5e7eb 1px, transparent 1px), linear-gradient(90deg, #e5e7eb 1px, transparent 1px);
      background-size: 40px 40px; opacity: 0.6;
    }

    /* Section Spacing */
    .py-8 { padding-top: 5rem; padding-bottom: 5rem; }
    .mb-6 { margin-bottom: 4rem; }
    .letter-spacing-2 { letter-spacing: 2px; }

    /* 2. Headers */
    .features-header {
      padding: 4rem 0 2rem;
    }

    /* 3. Glassmorphism Cards */
    .glass-card {
      background: rgba(255, 255, 255, 0.65);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.5);
      border-radius: 24px;
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .feature-card-hover:hover {
      transform: translateY(-15px);
      box-shadow: 0 20px 40px rgba(67, 97, 238, 0.15);
      border-color: var(--accent-color);
      background: rgba(255, 255, 255, 0.85);
    }

    /* 4. Icons & Gradients */
    .icon-box {
      width: 70px; height: 70px;
      border-radius: 18px;
      display: flex; align-items: center; justify-content: center;
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
      transform: rotate(-5deg);
      transition: transform 0.3s ease;
    }
    .feature-card-hover:hover .icon-box {
       transform: rotate(0deg) scale(1.1);
    }

    .bg-gradient-primary { background: linear-gradient(135deg, var(--primary-color), var(--accent-color)); }
    .bg-gradient-accent { background: linear-gradient(135deg, var(--accent-color), #72efdd); }
    .bg-gradient-success { background: linear-gradient(135deg, var(--success-color), #20a4f3); }
    .bg-gradient-warning { background: linear-gradient(135deg, var(--warning-color), #ffbf69); }
    .bg-gradient-info { background: linear-gradient(135deg, #a78bfa, #c4b5fd); }
    .bg-gradient-danger { background: linear-gradient(135deg, var(--danger-color), #ff99ac); }

    /* 5. Animations */
    .floating-animate img {
      animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
    }

    /* 6. Buttons & CTA */
    .btn-primary {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      border: none;
      transition: all 0.3s ease;
    }
    .btn-glow:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(67, 97, 238, 0.4);
    }

    .circuit-pattern {
      position: absolute; top: 0; left: 0; width: 100%; height: 100%;
      background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10 10h80v80h-80z' fill='none' stroke='%23ffffff' stroke-opacity='0.05' stroke-width='1'/%3E");
      opacity: 0.3; z-index: 1;
    }

    /* Responsive Adjustments */
    @media (max-width: 991px) {
      .py-8 { padding-top: 3rem; padding-bottom: 3rem; }
      .illustration-wrapper { margin-top: 2rem; }
    }
  </style>
</body>