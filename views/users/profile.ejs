<% layout("/layouts/boilerplate.ejs") %>

<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<body>
  <div class="tech-background"></div>

  <div class="container py-5 mt-4">
    <div class="row g-4">
      
      <div class="col-lg-4" data-aos="fade-right">
        
        <div class="glass-card text-center p-4 mb-4">
          <div class="position-relative d-inline-block mb-3">
            <div class="profile-avatar-lg shadow-lg">
              <%= currUser.username.charAt(0).toUpperCase() %>
            </div>
            <div class="status-badge bg-success" data-bs-toggle="tooltip" title="Account Active"></div>
          </div>
          
          <h3 class="fw-bold text-dark mb-1"><%= currUser.username %></h3>
          <p class="text-muted small mb-3"><%= currUser.email %></p>
          
          <div class="d-flex justify-content-center gap-2">
            <span class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2">
              <i class="fas fa-crown me-1"></i> Premium Member
            </span>
          </div>
        </div>

        <div class="membership-card p-4 mb-4 text-white position-relative overflow-hidden">
          <div class="card-chip mb-3"></div>
          <div class="d-flex justify-content-between align-items-start position-relative z-2">
            <h5 class="fw-bold mb-0" style="letter-spacing: 2px;">SMART CARD</h5>
            <i class="fas fa-wifi"></i>
          </div>
          <div class="mt-4 position-relative z-2">
            <small class="opacity-75 d-block">Member ID</small>
            <h4 class="font-monospace mb-3">8829 4401 2293</h4>
            <div class="d-flex justify-content-between">
              <div>
                <small class="opacity-75">Wallet Balance</small>
                <h5 class="fw-bold mb-0">₹ 1,250.00</h5>
              </div>
              <i class="fab fa-cc-visa fs-1 opacity-50"></i>
            </div>
          </div>
          <div class="circle-decor-1"></div>
          <div class="circle-decor-2"></div>
        </div>

        <div class="glass-card p-2">
          <div class="list-group list-group-flush rounded-3">
            <a href="#" class="list-group-item list-group-item-action active d-flex align-items-center gap-3 py-3 border-0 rounded-3">
              <i class="fas fa-user-circle"></i> Profile Details
            </a>
            <a href="/orders" class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3 border-0">
              <i class="fas fa-box-open"></i> My Orders
            </a>
            <a href="#" class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3 border-0">
              <i class="fas fa-credit-card"></i> Payment Methods
            </a>
            <a href="#" class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3 border-0">
              <i class="fas fa-shield-alt"></i> Security
            </a>
            <a href="/logout" class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3 border-0 text-danger">
              <i class="fas fa-sign-out-alt"></i> Log Out
            </a>
          </div>
        </div>
      </div>

      <div class="col-lg-8" data-aos="fade-left" data-aos-delay="100">
        
        <div class="row g-3 mb-4">
          <div class="col-md-4">
            <div class="glass-card p-3 d-flex align-items-center gap-3">
              <div class="icon-sq bg-primary-subtle text-primary">
                <i class="fas fa-shopping-bag fs-4"></i>
              </div>
              <div>
                <h5 class="fw-bold mb-0">24</h5>
                <small class="text-muted">Total Orders</small>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="glass-card p-3 d-flex align-items-center gap-3">
              <div class="icon-sq bg-success-subtle text-success">
                <i class="fas fa-piggy-bank fs-4"></i>
              </div>
              <div>
                <h5 class="fw-bold mb-0">₹840</h5>
                <small class="text-muted">Total Saved</small>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="glass-card p-3 d-flex align-items-center gap-3">
              <div class="icon-sq bg-warning-subtle text-warning">
                <i class="fas fa-star fs-4"></i>
              </div>
              <div>
                <h5 class="fw-bold mb-0">4.8</h5>
                <small class="text-muted">Review Score</small>
              </div>
            </div>
          </div>
        </div>

        <div class="glass-card p-4 p-md-5">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0">Profile Information</h4>
            <button class="btn btn-sm btn-outline-primary rounded-pill">
              <i class="fas fa-pen me-1"></i> Edit
            </button>
          </div>

          <form action="/profile/update?_method=PUT" method="POST">
            <div class="row g-4">
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" class="form-control" id="username" value="<%= currUser.username %>" readonly>
                  <label for="username">Username</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="email" class="form-control" id="email" value="<%= currUser.email %>" readonly>
                  <label for="email">Email Address</label>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" class="form-control" id="phone" value="+91 <%= currUser.phone %>">
                  <label for="phone">Phone Number</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" class="form-control" id="location" value="Bengaluru, India">
                  <label for="location">Location</label>
                </div>
              </div>
              
              <div class="col-12">
                <div class="form-floating">
                  <textarea class="form-control" placeholder="Address" id="address" style="height: 100px">123 Tech Park, Electronic City, Bengaluru, Karnataka 560100</textarea>
                  <label for="address">Delivery Address</label>
                </div>
              </div>

              <div class="col-12 mt-4">
                <button type="submit" class="btn btn-primary rounded-pill px-4 py-2 fw-bold btn-glow">
                  Save Changes
                </button>
              </div>
            </div>
          </form>
        </div>

        <div class="glass-card p-4 mt-4">
          <h5 class="fw-bold mb-3">Recent Trolley Sessions</h5>
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th scope="col">Date</th>
                  <th scope="col">Trolley ID</th>
                  <th scope="col">Items</th>
                  <th scope="col">Amount</th>
                  <th scope="col">Status</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>10 Dec, 2025</td>
                  <td><span class="font-monospace">TR-402</span></td>
                  <td>12 Items</td>
                  <td>₹ 1,240</td>
                  <td><span class="badge bg-success-subtle text-success rounded-pill">Completed</span></td>
                </tr>
                <tr>
                  <td>05 Dec, 2025</td>
                  <td><span class="font-monospace">TR-119</span></td>
                  <td>5 Items</td>
                  <td>₹ 450</td>
                  <td><span class="badge bg-success-subtle text-success rounded-pill">Completed</span></td>
                </tr>
                <tr>
                  <td>01 Dec, 2025</td>
                  <td><span class="font-monospace">TR-882</span></td>
                  <td>-</td>
                  <td>-</td>
                  <td><span class="badge bg-danger-subtle text-danger rounded-pill">Cancelled</span></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({ once: true, offset: 50 });
  </script>

  <style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4cc9f0;
      --font-main: 'Outfit', sans-serif;
    }

    body {
      font-family: var(--font-main);
      background-color: #f8f9fa;
      color: #2b2d42;
    }

    /* Tech Background */
    .tech-background {
      position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;
      background-color: #f8faff;
      background-image: linear-gradient(#e5e7eb 1px, transparent 1px), linear-gradient(90deg, #e5e7eb 1px, transparent 1px);
      background-size: 40px 40px; opacity: 0.6;
    }

    /* Glass Cards */
    .glass-card {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.6);
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

    /* Avatar */
    .profile-avatar-lg {
      width: 100px; height: 100px;
      background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
      color: white;
      font-size: 3rem;
      font-weight: bold;
      border-radius: 50%;
      display: flex; align-items: center; justify-content: center;
      border: 4px solid white;
    }

    .status-badge {
      width: 15px; height: 15px; border-radius: 50%;
      position: absolute; bottom: 5px; right: 5px;
      border: 2px solid white;
    }

    /* Membership Card */
    .membership-card {
      background: linear-gradient(135deg, #0f172a 0%, #334155 100%);
      border-radius: 20px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }
    .card-chip {
      width: 40px; height: 30px;
      background: linear-gradient(135deg, #fbbf24, #d97706);
      border-radius: 6px;
    }
    .circle-decor-1 {
      position: absolute; top: -50px; right: -50px; width: 150px; height: 150px;
      background: rgba(255,255,255,0.1); border-radius: 50%;
    }
    .circle-decor-2 {
      position: absolute; bottom: -30px; left: -30px; width: 100px; height: 100px;
      background: rgba(255,255,255,0.05); border-radius: 50%;
    }

    /* Navigation */
    .list-group-item {
      background: transparent;
      color: #64748b;
      font-weight: 500;
      transition: all 0.2s;
    }
    .list-group-item:hover {
      background: rgba(67, 97, 238, 0.05);
      color: var(--primary-color);
      transform: translateX(5px);
    }
    .list-group-item.active {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      color: white;
      box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
    }

    /* Stats Icons */
    .icon-sq {
      width: 50px; height: 50px;
      border-radius: 12px;
      display: flex; align-items: center; justify-content: center;
    }

    /* Form Inputs */
    .form-control {
      background: rgba(255,255,255,0.5);
      border: 1px solid #e2e8f0;
      border-radius: 10px;
    }
    .form-control:focus {
      background: white;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.1);
    }
    .form-control:read-only {
      background-color: #f1f5f9;
      opacity: 0.7;
    }

    /* Button Glow */
    .btn-primary {
      background: var(--primary-color); border: none;
    }
    .btn-glow:hover {
      background: var(--secondary-color);
      box-shadow: 0 5px 20px rgba(67, 97, 238, 0.4);
      transform: translateY(-2px);
    }
  </style>
</body>